<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_item_photo_url"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:contentDescription="Photo image"
            android:src="@color/colorPrimary"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/list_item_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_photo_url"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Success doesnâ€™t just find you. You have to go out and get it." />

        <TextView
            android:id="@+id/list_item_photo_album_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_photo_title"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            tools:text="Album id: 1" />

        <TextView
            android:id="@+id/list_item_photo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_photo_title"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            tools:text="Photo id: 1" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>